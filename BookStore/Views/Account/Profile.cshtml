@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> UserManager

@{

    var appUseer = await UserManager.GetUserAsync(User);
    string userRole = "";
    if (User.IsInRole("admin")) userRole = "Admin";
    if (User.IsInRole("client")) userRole = "Client";
    if (User.IsInRole("saller")) userRole = "Saller";
}
<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h2 class="mb-3">Profile</h2>
        <hr />


        <div class="row mb-2">
            <div class="col-sm-4">First Name</div>
            <div class="col-sm-8">@appUseer.FirstName</div>
        </div>
         <div class="row mb-2">
            <div class="col-sm-4">Last Name</div>
            <div class="col-sm-8">@appUseer.LastName</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-4">Email</div>
            <div class="col-sm-8">@appUseer.Email</div>
        </div>
         <div class="row mb-2">
            <div class="col-sm-4">Phone </div>
            <div class="col-sm-8">@appUseer.PhoneNumber</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-4">Address</div>
            <div class="col-sm-8">@appUseer.Address</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-4">Role</div>
            <div class="col-sm-8">@userRole</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-4">Create At</div>
            <div class="col-sm-8">@appUseer.CreatedAt</div>
        </div>
    </div>
</div>